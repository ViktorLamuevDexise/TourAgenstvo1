<Page x:Class="TourAgenstvo.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourAgenstvo"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="600" FontSize="18" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="30" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Username" Foreground="White"></Label>
            <TextBox Name="dopUsername" Background="#545d6a" Foreground="White" FontSize="18"></TextBox>
            <Label Content="Password" Foreground="White"></Label>
            <PasswordBox Name="dopPassword" Background="#545d6a" Foreground="White" FontSize="18"></PasswordBox>
            <Button Name="Button_Click_12" Click="Button_Click_1" Content="Войти" Margin="10" Background="#545d6a" Foreground="White"></Button>
            <Button Name="Button_Click1" Click="Button_Click" Content="Просмотреть туры" Background="#545d6a" Foreground="White"></Button>
        </StackPanel>
    </Border>
</Page>